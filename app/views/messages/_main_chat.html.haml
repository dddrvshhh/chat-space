.chat_main
  .chat_main__group-info 
    .chat_main__group-info__leftbox

      .chat_main__group-info__leftbox__grouplist
        = @group.name
      %ul.chat_main__group-info__leftbox__memberlist
        Member:

        %li.chat_main__group-info__leftbox__memberlist__name
          - @group.users.each do |a|
            = a.name

    .chat_main__group-info__rightbox
      = link_to edit_group_path(@group.id), class: "chat_main__group-info__rightbox__edit" do
        Edit 
      




  .chat_main__message-list
    = render @messages





  .chat_main__message-form3 
    = form_with model: [@group, @message], html: {class: "chat_main__message-form3__longbox4"}, local: true do |f|
    
      .chat_main__message-form3__longbox4__formcontent5
        = f.text_field :content, class: 'chat_main__message-form3__longbox4__formcontent5__inputfield6', placeholder: 'type a message'
        = f.label :image, class: 'chat_main__message-form3__longbox4__formcontent5__imagefield6' do
          = icon('far', 'image', class: 'chat_main__message-form3__longbox4__formcontent5__imagefield6__icon7')
          = f.file_field :image, class: 'chat_main__message-form3__longbox4__formcontent5__imagefield6__file7'

      = f.submit 'Send', class: 'chat_main__message-form3__longbox4__sendtcontent5'

