.chat_main__message-list__messagebox{data: {message: {id: message.id}}}

  .chat_main__message-list__messagebox__info-ss

    .chat_main__message-list__messagebox__info-ss__name-ww
      = message.user.name
    .chat_main__message-list__messagebox__info-ss__date-ww
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")

  .chat_main__message-list__messagebox__message-ss

    - if message.content.present?
      %p.chat_main__message-list__messagebox__message-ss__content
        = message.content
    = image_tag message.image.url, class: 'chat_main__message-list__messagebox__message-ss__image' if message.image.present?
  



